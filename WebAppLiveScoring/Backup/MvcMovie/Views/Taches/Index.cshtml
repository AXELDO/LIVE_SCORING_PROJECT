@model IEnumerable<MvcMovie.Models.Tache>

@{
    ViewData["Title"] = "Index des tâches";
}
<h2>Index tâches</h2>

<a asp-controller="Taches" asp-action="Create">Create new Tache</a> |

<script>
    SystemJS.import("./js/Customer.js").then(
        function (CustomerExport) {
            var customer = new CustomerExport.Customer();
            customer.TestCustomerClass();
            customer.Add();
        });
    
    

</script>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateDebut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomTache)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDebut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomTache)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-controller="Taches" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-controller="Taches" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-controller="Taches" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
